@page
@model WebApplication1.Pages.ShoppingCartModel
@{

    decimal totalz = 0;
}

<h2>ShoppingCart</h2>

<table class="table">
       <thead>
           <tr>
           <th>Name</th>
            <th>Price</th>
               <th>Quantity</th>
               </tr>
       </thead>
    <tbody>
@foreach (var item in Model._Products)
{
    
    
    <tr>
        <td>@item.product.ResponseName</td>
        <td>@item.product.PriceFinal</td>
        <td>@item.quantity</td>
        
        @if (Model.YourCart != null)
        {
            <td>
                <form asp-page="deleteproduct" asp-page-handler="" method="post">
                    <input type="hidden" name="id" value="@item.product.ID"/>
                    <input type="hidden" name="cartid" value="@Model.YourCart.ID"/>
                    <input type="submit" value="delete the product"/>
                </form>
            </td>
        }
        

               <tr>
                   <td>@item.product.ResponseName</td>
                   <td>@(item.product.PriceFinal * item.quantity)</td>
                   <td>
                       <form asp-page="deleteproduct" method="post">
                           <input type="hidden" name="id" value="@item.product.ID" />
                           <input type="hidden" name="cartid" value="@Model.YourCart.ID" />
                           <input type="submit" value="-" />
                       </form>  @item.quantity   <form asp-page="ShoppingCartController" method="post">
                           <input type="hidden" name="productid" value="@item.product.ID" />
                           <input type="submit" value="+" />
                       </form>
                   </td>


                

               </tr>



           }
           
           <tr>
               <td>Total amount : @totalz</td>
               
           </tr>

       </tbody>
    </table>
<a asp-page="./Shopping">Continue Shopping</a><br />
