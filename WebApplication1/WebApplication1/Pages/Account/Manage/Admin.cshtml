@page
@model AdminModel
@{
    ViewData["Title"] = "Admin";
}

<a asp-page="./AdminCreateProduct">Create new product</a>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Lastname</th>
    </tr>
    @{
        foreach (var item in Model.Users)
        {
            <tr>
            <td>@item.Email</td>
            <td>@item.LastName</td>
           <td><a asp-page="./TestEdit" asp-route-id="@item.Id">edit</a></td>
            </tr>
        }
    }
</table>



    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <h2>@ViewData["Title"]</h2>
        <h3>@Model.Message</h3>
        <p>Use this area to provide additional information.</p>
    }
    else
    {
        <p>Trying to sneak in?</p>
    }

