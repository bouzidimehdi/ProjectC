@page
@model WebApplication1.Pages.OrderHistoryModel
@{
    ViewData["Title"] = "OrderHistory";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-10" id="content">
                <h2>Order History</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                License
                            </th>
                            <th>
                                Product name
                            </th>
                            <th>
                                Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Key)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.License)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Products.ResponseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <div class="col-md-1"></div>
            </div>
        </div>
        </div>
            }

    <style>
        #content {
            margin-top: 1.5rem !important;
        }

        </style>