@page
@using Microsoft.CodeAnalysis.Host
@model ShoppingModel
@{
    ViewData["Title"] = "Shopping";

}
@*<h2>@ViewData["Title"]</h2>
*@
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Price </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <form method="get" asp-page-handler="page" onsubmit="return checkmin()">
                                <input type="hidden" value="page" name="handler" />

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Min</label>
                                        <input type="number" onchange="checkMinRealTime()" min="1" max="1000" name="min" class="form-control" id="min" placeholder="€0" value="@if(Model._Min != null){ @Model._Min }">
                                    </div>
                                    <div class="form-group col-md-6 text-right">
                                        <label>Max</label>
                                        <input type="number" onchange="checkMinRealTime()" min="2" max="1000" name="max" class="form-control" id="max" placeholder="€1,0000" value="@if(Model._Max != null){ @Model._Max }">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm btn-block">Filter out </button>
                                    <input type="hidden" value="@if (!Model.Products_page.empty) { @Model.Products_page.data.Index }" name="page_index" />
                                    <input type="hidden" value="@Model.page_size" name="page_size" />
                                </div>
                                <input hidden type="text" value="" />
                            </form>     
                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Genres </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <div class="custom-control custom-checkbox">
                                <span class="float-right badge badge-light round">52</span>
                                <input type="checkbox" class="custom-control-input" id="Check1">
                                <label class="custom-control-label" for="Check1">Adventure</label>
                            </div> <!-- form-check.// -->
                            <div class="custom-control custom-checkbox">
                                <span class="float-right badge badge-light round">52</span>
                                <input type="checkbox" class="custom-control-input" id="Check2">
                                <label class="custom-control-label" for="Check2">Racing</label>
                            </div> <!-- form-check.// -->
                            <div class="custom-control custom-checkbox">
                                <span class="float-right badge badge-light round">52</span>
                                <input type="checkbox" class="custom-control-input" id="Check3">
                                <label class="custom-control-label" for="Check3">Shooter</label>
                            </div> <!-- form-check.// -->
                            <div class="custom-control custom-checkbox">
                                <span class="float-right badge badge-light round">52</span>
                                <input type="checkbox" class="custom-control-input" id="Check4">
                                <label class="custom-control-label" for="Check4">Multiplayer</label>
                            </div> <!-- form-check.// -->
                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->
            </div>

        </div>
        <div class="col-md-9">
            @{
                if (!Model.Products_page.empty)
                {
                    int i_products = 0;
                    while (i_products < Model.Products_page.data.Items.Length)
                    {
                        <div class="card-columns">
                            @for (int i = 0; i < 3; i++)
                            {
                                if (i_products < Model.Products_page.data.Items.Length)
                                {
                                    Product item = Model.Products_page.data.Items[i_products];

                                    <div class="card">
                                        <div onclick="location.href = 'Productinfo?id=@Model.Products_page.data.Items[i_products].ID';" style="cursor: pointer">
                                            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.HeaderImage)" style="width: 100%; object-fit: cover; height: 200px;" alt="...">
                                        </div>
                                        <div class="card-body">
                                            <h6 class="display-5">@Html.DisplayFor(modelItem => item.ResponseName)</h6>
                                            <p>€ @Html.DisplayFor(modelItem => item.PriceFinal)</p>
                                         </div>

                                    </div>


                                }
                                i_products++;
                            }
                        </div>
                    }
                }
                else
                {
                    <p>Oops! There are no results!</p>
                }
            }
            </div>
    </div>

    <div class="row">

        <nav aria-label="..." style="text-align:center; margin:0 auto;">
            <ul class="pagination">
                @{
                    if (Model.Products_page != null && Model.show_Pagination == false)
                    {
                        if (Model.Products_page.empty == false)
                        {
                            for (int i = 4; i > -4; i--)
                            {
                                int page_index = Model.Products_page.data.Index - i;

                                if (page_index > -1 && page_index <= Model.Products_page.data.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="Shopping?handler=page&page_index=@page_index&page_size=50">
                                            @page_index
                                        </a>
                                    </li>
                                }
                            }
                        }
                    }
                }
            </ul>
        </nav>

    </div>
</div>

<script type="text/javascript" src="js/CheckMinMaxFilter.js" />

<style>


    .container.body-content {
        width:100%;
        padding-top: 20px !important;
        padding-left: 0px !important;
        padding-right: 0px !important;
        margin-left: 0px !important;
        margin-right: 0px !important;
    }
    .card {
        min-height: 300px;
    }
    .card-body{
        min-height:150px;
    }

    .container {
        margin-top: 1.5rem !important;
    }
</style>