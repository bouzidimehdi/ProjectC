@page
@model WebApplication1.Pages.Admin.AdminCreateProductModel

@{
    ViewData["Title"] = "TestCreateProduct";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" style="height: 100%; padding-left: 0px; min-height: 500px;" id="panel">
                <div class="navi">
                    <ul>
                        <li class="active disabled" id="headernavi"><a href="#"><span class="hidden-xs hidden-sm">Monkey Admin</span></a></li>
                        <li><a href="./Admin"><span class="hidden-xs hidden-sm">Dashboard</span></a></li>
                        <li><a href="./Usermanage"><span class="hidden-xs hidden-sm">Users</span></a></li>
                        <li><a href="AdminCreateProduct"><span class="hidden-xs hidden-sm">Create new Product</span></a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-1" style="padding-right: 0px !important; padding-left: 0px !important;"></div>

            <div class="col-md-8" style="height:100%; padding-left:0px !important;" id="content">
                <div id="HideStatus">@Html.Partial("_StatusMessage", Model.StatusMessage2)</div>
                <h2>Admin-Create</h2>

                <h4>New Product</h4>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.ResponseName" class="control-label"></label>
                                <input asp-for="Input.ResponseName" class="form-control" />
                                <span asp-validation-for="Input.ResponseName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.HeaderImage" class="control-label"></label>
                                <input asp-for="Input.HeaderImage" class="form-control " />
                                <span asp-validation-for="Input.HeaderImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.AboutText" class="control-label"></label>
                                <input asp-for="Input.AboutText" class="form-control" />
                                <span asp-validation-for="Input.AboutText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PriceFinal" class="control-label"></label>
                                <input asp-for="Input.PriceFinal" class="form-control" />
                                <span asp-validation-for="Input.PriceFinal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Input.GenreIsAction" /> Action
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Input.GenreIsAdventure" /> Adventure
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Input.GenreIsRacing" /> Racing
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Input.GenreIsMassivelyMultiplayer" /> MassivelyMultiplayer ( MMO )
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="/Admin/Admin" class="btn btn-primary">Back to Admin-panel</a>
                </div>
                </div>
            </div>
        </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script>
        function hidediv() {
            document.getElementById("HideStatus").style.display = "none";
        }
    </script>
    <style>
        #content {
            margin-top: 1.5rem !important;
        }

        #panel {
            margin-top: 0rem !important;
        }

        .navbar.flex-column a {
            color:white !important;
        }




        a:focus,a:hover,a{
            outline:none;
            text-decoration: none;
        }
        li,ul{
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navi a {
            color: #212529;
            display: block;
            font-size: 17px;
            font-weight: 500;
            padding: 28px 20px;
            text-decoration: none;
        }

        .navi i {
            margin-right: 15px;
            color: #5584ff;
        }

        .navi .active a {
            background: #16262e;
            border-left: 5px solid #007bff;
            color: #fff;
            padding-left: 15px;
        }

        .navi a:hover {
            background: #fff none repeat scroll 0 0;
            border-left: 5px solid #007bff;
            display: block;
            padding-left: 15px;
        }

        .navbar-default {
            background-color: #ffffff;
            border-color: #ffffff;
        }

        .navbar-toggle {
            border: none;
        }

        .navbar-default .navbar-toggle:focus,
        .navbar-default .navbar-toggle:hover {
            background-color: rgba(0, 0, 0, 0);
        }

        .navbar-default .navbar-toggle .icon-bar {
            background-color: #0e1a35;
        }

        #headernavi {
            pointer-events: none;
        }

    </style>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-6" style="margin-top:10em;margin-bottom:10em;">
                <p>You are lost go to <a asp-page="/Index" class="btn btn-info">Home</a></p>
            </div>
        </div>
    </div>
    <script>
        window.location.replace("https://localhost:44358")
    </script>
}