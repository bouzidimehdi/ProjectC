@page
@model WebApplication1.Pages.Admin.AdminDeleteProductModel

@{
    ViewData["Title"] = "AdminDeleteProduct";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="container">
        @Html.Partial("_StatusMessage", Model.StatusMessage)
        <h2>AdminDeleteProduct</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <br />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Product.ResponseName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.ResponseName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.GenreIsAction)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.GenreIsAction)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.GenreIsAdventure)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.GenreIsAdventure)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.GenreIsRacing)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.GenreIsRacing)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.GenreIsMassivelyMultiplayer)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.GenreIsMassivelyMultiplayer)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.PriceFinal)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.PriceFinal)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.AboutText)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.AboutText)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Product.HeaderImage)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Product.HeaderImage)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Product.ID" />
                <input type="submit" value="Delete" class="btn btn-default" onclick="this.disabled = true;this.form.submit()" /> |
                <a asp-page="/Shopping" class="btn btn-primary">Back to Shopping</a>
            </form>


            <div style="margin-top:1.5em">
                <a asp-page="/Admin/Admin" class="btn btn-primary">Back to Admin-panel</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-6" style="margin-top:10em;margin-bottom:10em;">
                <p>You are lost go to <a asp-page="/Index" class="btn btn-info">Home</a></p>
            </div>
        </div>
    </div>
    <script>
        window.location.replace("https://localhost:44358")
    </script>
}
